---
import Nav from '../components/Nav.astro';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@500;700&display=swap" rel="stylesheet">
		<title>atipik | Tu asistente para restaurantes</title>
	</head>
	<body>
		<div class="page-wrapper">
			<Nav />
			
			<main class="app-container">
				<slot />
			</main>
		</div>
	</body>
</html>

<style is:global>
	:root {
		--bg-color: #f7f9fc;
		--panel-color: #ffffff;
		--text-color: #2d3748;
		--accent-color: #38a169;
		--accent-hover: #2f855a;
		--accent-light: #ebf7f1;
		--border-color: #e2e8f0;
		--placeholder-color: #a0aec0;
		--canvas-bg: #edf2f7;
		--canvas-item: #f0f9f5;
		--shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
		--shadow-md: 0 4px 12px rgba(0,0,0,0.08);
		--shadow-lg: 0 10px 25px rgba(0,0,0,0.1);
		--radius: 16px;
		--radius-sm: 8px;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Inter', system-ui, sans-serif;
		background-color: var(--bg-color);
		color: var(--text-color);
	}
	
	.page-wrapper {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	.app-container {
		display: flex;
		flex: 1;
		height: calc(100vh - 58px); /* Adjust for nav height */
		overflow: hidden;
	}

	@media (max-width: 900px) {
		.app-container {
			flex-direction: column;
		}
	}
</style>
