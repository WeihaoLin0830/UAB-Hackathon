---
export interface Props {
  id: number;
  nombre: string;
  marca: string;
  categoria: string;
  calificacion: number;
  imagen: string;
  descripcion: string;
  horari: string;
  telefon: string;
  web: string;
  resenyes: string;
  distancia: string;
}

const { 
  id, 
  nombre, 
  marca, 
  categoria, 
  calificacion, 
  imagen, 
  descripcion, 
  horari, 
  telefon, 
  web, 
  resenyes, 
  distancia 
} = Astro.props;
---

<div class="restaurant-card">
  <div class="card-image" style={`background-image: url(${imagen})`}>
    <div class="image-overlay">
      <div class="badge-container">
        <span class="categoria-badge">{categoria}</span>
        <span class="distancia-badge">{distancia}</span>
      </div>
      
    </div>
  </div>
  
  <div class="card-content">
    <div class="header-section">
      <h3 title={nombre}>{nombre}</h3>
      <div class="rating">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
          <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
        </svg>
        <span>{calificacion}</span>
      </div>
    </div>
    

    
    <p class="description" title={descripcion}>{descripcion}</p>
    
    <div class="info-grid">
      <div class="info-item" title={`Horario: ${horari}`}>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
        <span>{horari}</span>
      </div>
      
      <div class="info-item" title={`TelÃ©fono: ${telefon}`}>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
        </svg>
        <span>{telefon}</span>
      </div>
      
      <a href={web} class="info-item web-item" title={`Web: ${web}`}>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
          <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
        </svg>
        <span class="web-text">{web}</span>
      </a>
    </div>
    
    <div class="review-container">
      <div class="review-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
        </svg>
      </div>
      <p class="review-text" title={resenyes}>{resenyes}</p>
    </div>
    
    <button class="ver-mas-btn">Ver detalles</button>
  </div>
</div>

<style>
  .restaurant-card {
    background: white;
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: transform 0.2s, box-shadow 0.2s;
    border: 1px solid var(--border-color);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .restaurant-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .card-image {
    height: 160px;
    background-size: cover;
    background-position: center;
    position: relative;
  }
  
  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 12px;
  }
  
  .badge-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .categoria-badge, .distancia-badge {
    background-color: rgba(0,0,0,0.6);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    font-size: 0.8rem;
    font-weight: 500;
    backdrop-filter: blur(4px);
  }
  
  .favorite-btn {
    position: absolute;
    top: 12px;
    right: 12px;
    background-color: white;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    transition: transform 0.2s;
  }
  
  .favorite-btn svg {
    color: #adadad;
    transition: color 0.2s, transform 0.2s;
  }
  
  .favorite-btn:hover svg {
    color: var(--accent-color);
    transform: scale(1.1);
  }

  .card-content {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .header-section {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.25rem;
  }

  .card-content h3 {
    margin: 0;
    font-size: 1.1rem;
    color: var(--text-color);
    font-weight: 600;
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .rating {
    display: flex;
    align-items: center;
    color: var(--accent-color);
    font-weight: 600;
    gap: 4px;
    min-width: fit-content;
    margin-left: 8px;
  }
  
  .subheader {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.75rem;
    align-items: center;
  }

  .marca {
    color: #717171;
    font-size: 0.8rem;
    font-style: italic;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 60%;
  }
  
  .review-count {
    font-size: 0.75rem;
    color: #717171;
  }

  .description {
    color: #505050;
    font-size: 0.85rem;
    margin-bottom: 0.75rem;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .info-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }
  
  .web-item {
    grid-column: span 2;
  }

  .info-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.8rem;
    color: #505050;
    white-space: nowrap;
    overflow: hidden;
  }

  .info-item svg {
    min-width: 14px;
    color: #777;
  }
  
  .web-text {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .review-container {
    display: flex;
    gap: 8px;
    margin-bottom: 1rem;
    background-color: #f9f9f9;
    border-radius: var(--radius-sm);
    padding: 0.75rem;
  }
  
  .review-icon {
    color: #777;
    margin-top: 2px;
  }
  
  .review-text {
    font-size: 0.8rem;
    color: #505050;
    margin: 0;
    font-style: italic;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
  }

  .ver-mas-btn {
    background-color: white;
    color: var(--accent-color);
    border: 1px solid var(--accent-color);
    padding: 0.6rem;
    border-radius: var(--radius-sm);
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    width: 100%;
    margin-top: auto;
  }

  .ver-mas-btn:hover {
    background-color: var(--accent-color);
    color: white;
  }
  
  @media (max-width: 480px) {
    .info-grid {
      grid-template-columns: 1fr;
    }
    
    .web-item {
      grid-column: span 1;
    }
  }
</style>
