---

<section class="buscador-container">
  <div class="buscador-wrapper">
    <h2>Encuentra tu restaurante ideal</h2>
    <div class="search-container">
      <div class="search-box">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="search-icon">
          <circle cx="11" cy="11" r="8"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
        <input type="text" placeholder="Buscar restaurantes, cocina, ubicación..." id="search-input">
      </div>
      
      <!-- Eliminado el div filter-container -->
    </div>
  </div>
  
  <div class="results-container">
    <div class="results-grid">
      {restaurantes.map(restaurante => (
        <RestaurantCard 
          id={restaurante.id} 
          nombre={restaurante.nombre}
          marca={restaurante.marca} 
          categoria={restaurante.categoria} 
          calificacion={restaurante.calificacion} 
          imagen={restaurante.imagen} 
          descripcion={restaurante.descripcion}
          horari={restaurante.horari}
          telefon={restaurante.telefon}
          web={restaurante.web}
          resenyes={restaurante.resenyes}
          quant_resenyes={restaurante.quant_resenyes}
          distancia={restaurante.distancia}
        />
      ))}
    </div>
  </div>
</section>

<style>
  .buscador-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem 3rem;
    font-family: 'Inter', system-ui, sans-serif;
    height: 100%;
    overflow-y: auto;
  }

  .buscador-wrapper {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  h2 {
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--text-color);
    margin-bottom: 1.5rem;
  }

  .search-container {
    max-width: 700px;
    margin: 0 auto;
  }

  .search-box {
    display: flex;
    align-items: center;
    box-shadow: var(--shadow-sm);
    border-radius: 50px;
    overflow: hidden;
    position: relative;
    margin-bottom: 1.5rem;
    border: 1px solid var(--border-color);
    padding: 0 1rem;
    background-color: white;
  }
  
  .search-icon {
    color: var(--placeholder-color);
    margin-right: 0.5rem;
  }

  input {
    flex: 1;
    padding: 1rem 0.5rem;
    font-size: 0.95rem;
    border: none;
    outline: none;
    background-color: transparent;
  }

  /* Eliminar estilos del filter-container y filter-pill */

  .results-container {
    margin-top: 3rem;
  }

  .results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .results-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1.25rem;
    }
    
    h2 {
      font-size: 1.5rem;
    }
    
    .buscador-container {
      padding: 1.5rem 1rem 2rem;
    }
  }

  @media (max-width: 480px) {
    .results-grid {
      grid-template-columns: 1fr;
    }
    
    /* Eliminar estilos mobile de filter-container */
  }
</style>